---
const { video } = Astro.props;
---

<div class="video">
	<img
		class="thumbnail"
		src="https://i.ytimg.com/vi/8weX2B9yhnU/hqdefault.jpg?sqp=-oaymwEcCOADEI4CSFXyq4qpAw4IARUAAIhCGAFwAcABBg==&rs=AOn4CLDemXPGaYD_dBtQ9Cw2bW6l3lHeGw"
	/>
	<div class="video-info">
		<img src="https://yt3.ggpht.com/ihjKj-LaAv85XFylZz-NHZo50j7dW4M-Sncj7kWGEagsp-i5s2L4Z8qRs9_8HY8nuACokEOF=s88-c-k-c0x00ffffff-no-rj" />
		<div class="video-info-text">
			<p class="title">{video.title}</p>
			<p class="username">{video.user.username}</p>

			<p class="info">{video.likes} - {video.createdAt}</p>
		</div>
	</div>
</div>

<style>
	p {
		font-size: 0.9rem;

		margin: 0;
		padding: 0;
	}

	.video {
		display: flex;
		flex-direction: column;

		gap: 1rem;

		width: 20rem;
	}

	.video .thumbnail {
		border-radius: 1rem;

		width: 100%;
		height: 10rem;

		object-fit: cover;
	}

	.video-info {
		display: flex;
		flex-direction: row;
		align-items: flex-start;

		gap: 1rem;
	}

	.video-info img {
		width: 3rem;

		border-radius: 50%;
	}

	.title {
		font-weight: 500;
	}

	.username,
	.info {
		opacity: 0.6;
	}
</style>
